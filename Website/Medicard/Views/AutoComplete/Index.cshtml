@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item"><a href="#" id="methods">Methods</a></li>
            <li class="list-group-item"><a href="#" id="properties">Properties</a></li>
            <li class="list-group-item"><a href="#" id="events">Events</a></li>
        </ul>
    </div>
    <div class="col-md-10">
        <h2>TextBox - AutoComplete</h2>
        <hr/>
        <h3 class="text-green">Data Attributes</h3>
        <div class="well">
            <div class="text-bold">&lt;input type="text" id="" name=""</div>
            <div class="indent-tab"><span class="text-bold">data-wg-ui="kendoAutoComplete"</span><span class="text-blue"> - Kendo Widget: </span><a href="http://docs.telerik.com/kendo-ui/api/javascript/ui/autocomplete" target="_blank">AutoComplete</a></div>
            <div class="indent-tab"><span class="text-bold">data-init-ui="true"</span><span class="text-blue"> - Whether to initialize the control when it loads on the DOM; Default: </span><span class="text-bold">false</span></div>
            <div class="indent-tab"><span class="text-bold">data-url="[URL]"</span><span class="text-blue"> - Data source from server. Only if you want to display suggestions</span></div>
            <div class="indent-tab"><span class="text-bold">data-serverfiltering="true"</span><span class="text-blue"> - Default: </span><span class="text-bold">false</span></div>
            <div class="indent-tab"><span class="text-bold">data-readonly="true"</span><span class="text-blue"> - Default: </span><span class="text-bold">false</span></div>
            <div class="indent-tab text-bold">placeholder=""</div>
            <div class="indent-tab text-bold">maxlength=""/&gt;</div>
        </div>
        <hr />
        <div class="col-md-offset-1 col-md-10">
            <div>
                <h4 class="text-green">With data</h4>
                <div>
                    <input type="text" id="Country1" name="Country1" data-wg-ui="kendoAutoComplete" data-url="AutoComplete/Data" data-init-ui="true" placeholder="Country" maxlength="50" />
                </div>
                <br />
                <div class="well">
                    <div class="text-bold">&lt;input type="text" id="Country1" name="Country1"</div>
                    <div class="indent-tab"><span class="text-bold">data-wg-ui="kendoAutoComplete"</span></div>
                    <div class="indent-tab"><span class="text-bold">data-init-ui="true"</span></div>
                    <div class="indent-tab"><span class="text-bold text-red">data-url="AutoComplete/Data"</span></div>
                    <div class="indent-tab"><span class="text-bold">data-serverfiltering="false"</span></div>
                    <div class="indent-tab text-bold">placeholder="Country"</div>
                    <div class="indent-tab text-bold">maxlength="50"/&gt;</div>
                </div>
            </div>
            <hr />
            <div>
                <h4 class="text-green">Initialize control</h4>
                <div>
                    <input type="text" id="Country2" name="Country2" data-wg-ui="kendoAutoComplete" data-init-ui="false" data-readonly="false" />
                </div>
                <br />
                <div class="well">
                    <div class="text-bold">&lt;input type="text" id="Country2" name="Country2"</div>
                    <div class="indent-tab"><span class="text-bold">data-wg-ui="kendoAutoComplete"</span></div>
                    <div class="indent-tab"><span class="text-bold">data-init-ui="<span class="text-red">false</span>"/&gt;</span></div>
                </div>
                <div class="text-bold well">
                    <div>wg('#Country2').textbox(c => c</div>
                    <div class="indent-tab">.dataSource(wg.url('AutoComplete/Data'))</div>
                    <div class="indent-tab">.value('')</div>
                    <div class="indent-tab">.serverFiltering(<Span class="text-red">true</Span>),</div>
                    <div class="indent-tab">
                        <div>{</div>
                        <div class="indent-tab">placeholder: 'Country',</div>
                        <div class="indent-tab">maxLength: 50</div>
                        <div>});</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/scripts/ts/modules/autocomplete.js"></script>
}