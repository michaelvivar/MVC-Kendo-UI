@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item"><a href="#" id="methods">Methods</a></li>
            <li class="list-group-item"><a href="#" id="properties">Properties</a></li>
            <li class="list-group-item"><a href="#" id="events">Events</a></li>
        </ul>
    </div>
    <div class="col-md-10">
        <div>
            <h2>Dual ListBox</h2>
            <hr />
            <h3 class="text-green">Data Attributes</h3>
            <div class="well">
                <div class="text-bold">&lt;select id="" name=""</div>
                <div class="indent-tab">
                    <div><span class="text-bold">data-wg-ui="dualListBox"</span></div>
                    <div><span class="text-bold">data-init-ui="true"</span><span class="text-blue"> - Whether to initialize the control when it loads on the DOM; Default: </span><span class="text-bold">false</span></div>
                    <div><span class="text-bold">data-url="[URL]"</span></div>
                    <div><span class="text-bold">data-cascadefrom="[ID]"</span></div>
                    <div><span class="text-bold">data-left-title="[TITLE]"</span><spn class="text-blue"> - Default: </spn><span class="text-bold">Record(s) to be assigned</span></div>
                    <div><span class="text-bold">data-right-title="[TITLE]"</span><spn class="text-blue"> - Default: </spn><span class="text-bold">Assigned record(s)</span></div>
                    <div><span class="text-bold">data-height="[INT]"&gt;</span><span class="text-blue"> - Default: </span><span class="text-bold">200</span></div>
                </div>
                <div class="text-bold">&lt;/select&gt;</div>
            </div>
        </div>
        <hr />
        <div>
            <div class="col-md-8 col-md-offset-2">
                <select id="Country">
                    <option value="647c5eda-38f0-402a-9354-666221491852">Afghanistan</option>
                </select>
            </div>
        </div>
        <div class="clearfix"></div>
        <hr />
        <div>
            <div class="well">
                <div class="text-bold">&lt;select id="Country" data-wg-ui="false" data-wg-ui="dualListBox"&gt;</div>
                <div class="indent-tab">
                    <div>
                        <span class="text-bold">&lt;option value="647c5eda-38f0-402a-9354-666221491852"&gt;Afghanistan&lt;/option&gt;</span><span class="text-blue"> - Assigned value</span> 
                    </div>
                </div>
                <div class="text-bold">&lt;/select&gt;</div>
            </div>
        </div>
        <div>
            <h3 class="text-green">Initialize control</h3>
            <div class="well">
                <div class="text-bold">wg('#Country').duallistbox(c => c.</div>
                <div class="indent-tab">
                    <div class="text-bold">.dataSource('DualListBox/Data')</div>
                </div>
                <div class="text-bold">)</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/scripts/ts/modules/duallistbox.js"></script>
}
